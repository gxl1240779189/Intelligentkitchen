<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9DCBB"
    android:orientation="vertical" >

    <include layout="@layout/yaokong_head" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <com.example.paintcanvas.roundmenu
            android:id="@+id/id_menulayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/turnplate_mask_unlogin_normal" >

            <RelativeLayout
                android:id="@id/id_circle_menu_item_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="84.0dip"
                    android:layout_height="84.0dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/food" />

                <ImageView
                    android:layout_width="106.0dip"
                    android:layout_height="106.0dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/turnplate_mask_unlogin_normal" />
            </RelativeLayout>
        </com.example.paintcanvas.roundmenu>
    </LinearLayout>

</LinearLayout>